<div class="map" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
<div class="container margin-top-negative main-cont">
  <div class="row">
    <div class="col-8">
      <div class="top-card">
        <h1 class="display-5"><%= @flat.name %></h1>
        <p> <%= @flat.address %></p>
      </div>
        <div class= "below-card">
          <h2> A bit more about this flat</h2>
          <p> <%= @flat.description %></p>
        </div>
      </div>
    <div class="col-4">
        <div class="book-place">
          <p><strong>Book This Place!</strong></p>
          <div class="input-group mb-2">
          <span class="input-group-text" id="basic-addon1">From:</span>
          <input type="text" class="form-control" placeholder="02/15/2021" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-2">
          <span class="input-group-text" id="basic-addon1">To:</span>
          <input type="text" class="form-control" placeholder="03/12/2021" aria-label="Username" aria-describedby="basic-addon1">
        </div>
       <button type="button" class="btn btn-success bottom-btn1">Book</button>
    </div>
      <div class="details">
        <h2><strong>Details</strong></h2>
        <div class= "d-flex">
       <div class="d-flex"><i class="fas fa-user-friends mr-2"></i><p style="margin-right: 30px;"> <%= @flat.number_of_guests %> </p></div>
        <div class="d-flex"><i class="fas fa-euro-sign mr-2"></i><p><%= @flat.price_per_night %></p></div>
      </div>
      </div>
      <div class="socials">
    <div class="flex-align">
        <p>Share</p>
      <div class="flex">
       <i class="fab fa-facebook-square fa-2x mr-2"></i>
       <i class="fab fa-twitter-square fa-2x mr-2"></i>
       <i class="fab fa-pinterest-square fa-2x mr-2"></i>
       <i class="fa fa-envelope-square fa-2x mr-3"></i>
    </div>

  </div>
</div>



  </div>
</div>





